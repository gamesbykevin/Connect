<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActivityPage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="GameOverPage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/transparent50</item>
    </style>

    <style name="TableLayoutSplash">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:stretchColumns">*</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="TutorialText">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">12pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonMenu">
        <item name="android:textSize">8pt</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:soundEffectsEnabled">true</item>
    </style>

    <style name="RowMenu">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="TableMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="LevelSelectImage">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="LevelSelectCustomText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RowLevelSelect">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LevelSelectEnabled">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@drawable/level_select_window</item>
    </style>

    <style name="LevelSelectDisabled">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@drawable/overlay</item>
    </style>

    <style name="ButtonLevelSelect">
        <item name="android:textSize">8pt</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:soundEffectsEnabled">true</item>
    </style>

    <style name="ButtonSocial">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:soundEffectsEnabled">true</item>
    </style>

    <style name="TableSocial">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">bottom</item>
    </style>
	
</resources>