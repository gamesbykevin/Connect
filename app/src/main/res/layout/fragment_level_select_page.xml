<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            style="android:textAppearanceLarge"
            android:id="@+id/textHeaderLevelSelect"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_header_level_select"
            android:textSize="12pt"
            android:layout_marginBottom="16dp" />

        <TextView
            style="android:textAppearanceLarge"
            android:id="@+id/textHeader"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:layout_marginBottom="16dp" />

        <TextView
            style="android:textAppearanceLarge"
            android:id="@+id/textBest"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Best Time 00:00"
            android:textSize="12pt"
            android:layout_marginBottom="16dp" />


        <TableLayout style="@style/TableMenu">
                <TableRow style="@style/RowMenu">
                        <ImageView
                            android:id="@+id/levelSelectShape"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </TableRow>

                <TableRow style="@style/RowMenu">
                        <!-- leader board -->
                        <Button android:id="@+id/buttonLeaderboard" style="@style/ButtonMenu" android:text="@string/button_text_leaderboard" android:onClick="onClickLeaderboard" />
                </TableRow>

                <TableRow style="@style/RowMenu">
                        <!-- play level -->
                        <Button android:id="@+id/buttonPlay" style="@style/ButtonMenu" android:text="@string/button_text_play" android:onClick="onClickPlay" />
                </TableRow>

        </TableLayout>
</LinearLayout>